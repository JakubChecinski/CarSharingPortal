@model IEnumerable<CarSharingPortal.Models.ViewModels.CarSharingOfferViewModel>


<div id="fullOfferTable">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Looking for</th>
                <th scope="col">From</th>
                <th scope="col">To</th>
                <th scope="col">Date</th>
                <th scope="col">Contact Info</th>
            </tr>
        </thead>
        <tbody class="offerTable">
            @if (Model != null && Model.Any())
            {
                foreach (var offer in Model)
                {
                    var offerType = "driver";
                    if (offer.IsAuthorPassenger) offerType = "passenger";
                    <tr class="@offerType">
                        <td>
                            @if (@offer.IsAuthorPassenger)
                            {
                                <text>Driver</text>
                            }
                            else
                            {
                                <text>Passengers</text>
                            }
                        </td>
                        <td>
                            @offer.From
                        </td>
                        <td>
                            @offer.To
                        </td>
                        <td>
                            @offer.DateTravelStart.ToString("dd-MM-yyyy")
                        </td>
                        <td>
                            @offer.AuthorName
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="5">
                        No offers currently available.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>